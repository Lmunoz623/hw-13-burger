<h1>Eat Da Burger</h1>

<h2>New Burgers</h2>

<ul>
  {{#each burger_name}}
    {{#if devoured}}
      {{> burger_name/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Eaten Burgers</h2>

<ul>
  {{#each burger_name}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <label for="burg"></label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add Da Burger!</button>
</form>